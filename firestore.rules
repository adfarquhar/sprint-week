rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tasks collection - only authenticated users can access their own tasks
    match /tasks/{taskId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }

    // Daily archive collection - users can only access their own archived tasks
    match /daily_archive/{archiveId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // User-specific collections for other features
    match /user_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Standup sessions
    match /standup_sessions/{sessionId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // Pomodoro sessions
    match /pomodoro_sessions/{sessionId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // Excuse tracking
    match /excuses/{excuseId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // Session scheduling
    match /scheduled_sessions/{sessionId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }
  }
}
